<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".CreateTicketActivity">

    <EditText
        android:id="@+id/etTicketTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Título do Chamado" />

    <EditText
        android:id="@+id/etTicketDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descrição do Chamado" />

    <Button
        android:id="@+id/btnSaveTicket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Salvar Chamado" />

</LinearLayout>
